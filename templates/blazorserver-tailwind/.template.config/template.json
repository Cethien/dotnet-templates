{
	"$schema": "http://json.schemastore.org/template",
	"author": "Cethien",
	"classifications": ["Web", "Blazor"],
	"identity": "BlazorTailwind",
	"name": "Blazor Serverside + Tailwind CSS",
	"shortName": "blazorservertailwind",
	"tags": {
		"type": "project",
		"language": "C#"
	},
	"sourceName": "BlazorTailwindTemplate",
	"preferNameDirectory": true,
	"primaryOutputs": [
		{
			"path": "BlazorTailwindTemplate.csproj"
		}
	],
	"symbols": {
		"TargetFramework": {
			"type": "parameter",
			"description": "",
			"datatype": "choice",
			"choices": [
				{
					"choice": "net6.0"
				},
				{
					"choice": "net7.0"
				}
			],
			"defaultValue": "net6.0",
			"replaces": "{TargetFramework}"
		},
		"enable-vscode": {
			"type": "parameter",
			"description": "enable .vscode with recommendations and tasks",
			"datatype": "bool",
			"defaultValue": "true"
		},
		"enable-docker": {
			"type": "parameter",
			"description": "enable Dockerfile",
			"datatype": "bool",
			"defaultValue": "true"
		},
		"enable-devcontainer": {
			"type": "parameter",
			"description": "enable .devcontainer",
			"datatype": "bool",
			"defaultValue": "true"
		}
	},
	"sources": [
		{
			"modifiers": [
				{
					"exclude": [
						"**/.vs/**/*",
						"**/.vscode/**/*",
						"**/.idea/**/*",
						"**/.github/**/*",
						"**/.devcontainer/**/*",
						"**/[Bb]in/**",
						"**/[Oo]bj/**",
						".template.config/**/*",
						"**/*.filelist",
						"**/*.user",
						"**/*.lock.json",
						"**/node_modules/**",
						"**/wwwroot/css/app.min.css"
					]
				},
				{
					"condition": "(!enable-vscode)",
					"exclude": ["**/.vscode/**"]
				},
				{
					"condition": "(!enable-docker)",
					"exclude": ["**/.dockerignore**", "Dockerfile**"]
				},
				{
					"condition": "(!enable-devcontainer)",
					"exclude": ["**/.devcontainer/**"]
				}
			]
		}
	],
	"postActions": [
		{
			"actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
			"description": "Restore NuGet packages required by this project.",
			"manualInstructions": [
				{
					"text": "Run 'dotnet restore'"
				}
			],
			"continueOnError": true
		}
	]
}
