{
	"$schema": "http://json.schemastore.org/template",
	"author": "Cethien",
	"classifications": ["Web", "Blazor"],
	"identity": "BlazorTailwind",
	"name": "Blazor Serverside + Tailwind CSS",
	"shortName": "blazortailwind",
	"tags": {
		"type": "project",
		"language": "C#"
	},
	"sourceName": "BlazorTailwindTemplate",
	"preferNameDirectory": true,
	"sources": [
		{
			"modifiers": [
				{
					"exclude": [
						"**/.vs/**/*",
						"**/.vscode/**/*",
						"**/.idea/**/*",
						"**/.github/**/*",
						"**/.devcontainer/**/*",
						"**/[Bb]in/**",
						"**/[Oo]bj/**",
						".template.config/**/*",
						"**/*.filelist",
						"**/*.user",
						"**/*.lock.json",
						"**/*-lock.json",
						"**/node_modules/**"
					]
				}
			]
		}
	],
	"primaryOutputs": [
		{
			"path": "BlazorTailwindTemplate.csproj"
		}
	],
	"postActions": [
		{
			"actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
			"description": "Restore NuGet packages required by this project.",
			"manualInstructions": [
				{
					"text": "Run 'dotnet restore'"
				}
			],
			"continueOnError": true
		},
		{
			"actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
			"description": "Installs NPM packages required by this project.",
			"args": {
				"executable": "setup.cmd",
				"args": "",
				"redirectStandardOutput": false,
				"redirectStandardError": false
			},
			"manualInstructions": [
				{
					"text": "Run 'setup.cmd'"
				}
			],
			"continueOnError": false
		}
	]
}
