{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/BlazorTailwindTemplate.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/BlazorTailwindTemplate.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/BlazorTailwindTemplate.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"type": "docker-build",
			"label": "docker-build: debug",
			"dependsOn": ["build"],
			"dockerBuild": {
				"tag": "blazorservertailwind:dev",
				"target": "base",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			},
			"netCore": {
				"appProject": "${workspaceFolder}/BlazorTailwindTemplate.csproj"
			}
		},
		{
			"type": "docker-build",
			"label": "docker-build: release",
			"dependsOn": ["build"],
			"dockerBuild": {
				"tag": "blazorservertailwind:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			},
			"netCore": {
				"appProject": "${workspaceFolder}/BlazorTailwindTemplate.csproj"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": ["docker-build: debug"],
			"dockerRun": {},
			"netCore": {
				"appProject": "${workspaceFolder}/BlazorTailwindTemplate.csproj",
				"enableDebugging": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": ["docker-build: release"],
			"dockerRun": {},
			"netCore": {
				"appProject": "${workspaceFolder}/BlazorTailwindTemplate.csproj"
			}
		},
		{
			"type": "npm",
			"script": "install",
			"group": "clean",
			"problemMatcher": [],
			"label": "npm: install",
			"detail": "install dependencies from package"
		},
		{
			"type": "npm",
			"script": "ui:build",
			"group": "build",
			"problemMatcher": [],
			"label": "npm: ui:build",
			"detail": "postcss ./Styles/app.pcss -o ./wwwroot/css/app.min.css --verbose"
		},
		{
			"type": "npm",
			"script": "ui:dev",
			"problemMatcher": [],
			"label": "npm: ui:dev",
			"detail": "postcss ./Styles/app.pcss -o ./wwwroot/css/app.min.css --verbose --watch"
		}
	]
}
